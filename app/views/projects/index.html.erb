    <div class="container-personal">

      <% @projects.each do |project| %>

      <div id="<%= project.html_id %>">
      <div class="index-card" class="text-center">
        <h1 class="text-center mb-2"><%= project.name %></h1>
        <%= image_tag("#{project.image_address}", options = {class: "pic"}) %>
         <a href="<%= project.url %>" data-type="remote" class="friends mt-3" class="text-center"><%= project.cta %></a>
         <div class="des-box"> <p> <%= project.description %> </p> </div>
      </div>
      </div>


    <% end %>
    </div>
